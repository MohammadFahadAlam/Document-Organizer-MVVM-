<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyDocumentOrganizer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_bg</item>
        <item name="colorPrimaryVariant">@color/app_bg</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_bg</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/tajawal_medium_font_family</item>
    </style>

    <style name="MaterialCustomButton" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:color">#1A72E8</item>
        <item name="strokeColor">#1A72E8</item>
        <item name="icon">@drawable/ic_reminder</item>
        <item name="iconSize">@dimen/_24dp</item>
        <item name="cornerRadius">@dimen/_5dp</item>
    </style>

    <!-- Splash screen theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/splash_bg</item>-->
        <item name="android:windowBackground">@color/splash_screen_bg</item>
        <item name="colorPrimary">@color/splash_screen_bg</item>
        <item name="colorPrimaryDark">@color/splash_screen_bg</item>
        <item name="colorAccent">@color/splash_screen_bg</item>
        <item name="android:statusBarColor">@color/splash_screen_bg</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

</resources>