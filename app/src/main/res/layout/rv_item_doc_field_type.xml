<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/_5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tvFieldType"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_5dp"
        android:background="@drawable/country_search_view_round_corner_bg"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_20dp"
        android:paddingEnd="@dimen/_30dp"
        android:text="@string/name"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/hint_text_color"
        android:textSize="@dimen/_16sp"
        app:layout_constraintEnd_toStartOf="@+id/ivModeItemIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewMid"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/tvFieldType"
        app:layout_constraintBottom_toBottomOf="@+id/tvFieldType"
        app:layout_constraintStart_toStartOf="@+id/tvFieldType"
        app:layout_constraintEnd_toEndOf="@+id/tvFieldType"/>

    <ImageView
        android:id="@+id/ivThreeDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5dp"
        android:background="@drawable/click_effect"
        android:padding="@dimen/_5dp"
        android:src="@drawable/ic_three_dots"
        app:layout_constraintBottom_toBottomOf="@+id/tvFieldType"
        app:layout_constraintTop_toTopOf="@+id/tvFieldType"
        app:layout_constraintEnd_toEndOf="@+id/tvFieldType"/>

    <ImageView
        android:id="@+id/ivModeItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_move_item"
        android:paddingVertical="@dimen/_15dp"
        android:paddingHorizontal="@dimen/_10dp"
        android:layout_marginHorizontal="@dimen/_5dp"
        android:background="@drawable/click_effect"
        app:layout_constraintBottom_toBottomOf="@+id/tvFieldType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvFieldType" />

</androidx.constraintlayout.widget.ConstraintLayout>