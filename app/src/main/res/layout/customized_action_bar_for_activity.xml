<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlvActionBar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivActionBarBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sp"
        android:src="@drawable/ic_arrow_back_24"
        app:tint="@color/google_login_btn_text_color" />

    <TextView
        android:id="@+id/tvActionBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/settings"
        android:textColor="@color/google_login_btn_text_color"
        android:textSize="@dimen/_18sp" />

    <ImageView
        android:id="@+id/ivDeleteIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_10dp"
        android:background="@drawable/click_effect"
        android:padding="@dimen/_5dp"
        android:src="@drawable/ic_baseline_delete_outline_24"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rlToolbarEndBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_10dp"
        android:background="@drawable/gradient_color_unlimited_package_background"
        android:padding="@dimen/_5dp">

        <ImageView
            android:id="@+id/ivToolbarEndBtnIcon"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_subscription_package" />

        <TextView
            android:id="@+id/tvToolbarEndBtnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_toEndOf="@+id/ivToolbarEndBtnIcon"
            android:text="@string/upgrade"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>